<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="PersonServiceCore" class="com.spring.core.task1.PersonServiceCore"/>

    <bean id="managerService" class="com.spring.core.task1.ManagerService"/>

    <bean id="personService" class="com.spring.core.task2.PersonService" />

    <bean id="accountServiceImpl" class="com.spring.core.task2.AccountServiceImpl">
        <property name="userService" ref="personService" />
    </bean>

</beans>